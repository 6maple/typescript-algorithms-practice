{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": ["plugin:prettier/recommended"],
  "plugins": ["jest"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "useTabs": false,
        "singleQuote": true
      }
    ]
  },
  "env": {
    "jest/globals": true
  }
}
